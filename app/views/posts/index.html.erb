<div class = "d-flex align-items-center justify-content-between">
    <h1>Mastodon Account Posts</h1>
    <% if Current.user.mastodon_accounts.any? %>
        <%= link_to "Schedule a Post" , new_post_path , class: "btn  btn-primary" %>
    <%end%>
</div>


<% if Current.user.mastodon_accounts.none? %>
        <%= button_to "Connect your Mastodon Account" , "/auth/mastodon" , data: {turbo: false} ,  method: :post , class: "btn  btn-primary" %>
<%end%>

<%= render @posts %>
